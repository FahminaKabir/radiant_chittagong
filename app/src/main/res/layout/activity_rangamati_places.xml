<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.personal.radiantchittagong.RangamatiPlaces">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <ImageView
            android:layout_width="370dp"
            android:layout_height="200dp"
            android:background="@drawable/sajek"
            android:id="@+id/bt1"

            />
        <ImageView
            android:layout_width="370dp"
            android:layout_height="200dp"
            android:background="@drawable/sajek_"
            android:id="@+id/bt2"

            android:layout_below="@+id/bt1"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sajek"
            android:textSize="22dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:id="@+id/text1"
            android:layout_below="@+id/bt2"
            />
        <ImageView
            android:layout_width="370dp"
            android:layout_height="200dp"
            android:background="@drawable/beautifulkaptailake"
            android:id="@+id/btn3"
            android:layout_below="@+id/text1"

            />
        <ImageView
            android:layout_width="370dp"
            android:layout_height="200dp"
            android:background="@drawable/kaptailake"
            android:id="@+id/bt4"

            android:layout_below="@+id/btn3"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kaptai"
            android:textSize="22dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:id="@+id/text3"
            android:layout_below="@+id/bt4"
            />

    </RelativeLayout>
</ScrollView>
