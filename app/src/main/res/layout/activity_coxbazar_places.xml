<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.personal.radiantchittagong.CoxbazarPlaces">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:layout_width="370dp"
            android:layout_height="200dp"
            android:background="@drawable/coxhimchori"
            android:id="@+id/bt1"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Himchori"
            android:textSize="22dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:id="@+id/text1"
            android:layout_below="@+id/bt1"
            />
        <ImageView
            android:layout_width="370dp"
            android:layout_height="200dp"

            android:background="@drawable/labonipoint"
            android:id="@+id/bt2"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:onClick="Plaza"
            android:layout_below="@+id/text1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laboni Point"
            android:textSize="22dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:id="@+id/text2"
            android:layout_below="@+id/bt2"
            />


        <ImageView
            android:layout_width="370dp"
            android:layout_height="200dp"
            android:background="@drawable/sunset_at_inani_beach"
            android:id="@+id/bt3"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_below="@id/text2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunset at Innani beach"
            android:textSize="22dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:id="@+id/text3"
            android:layout_below="@+id/bt3"
            />
        <ImageView
            android:layout_width="370dp"
            android:layout_height="200dp"
            android:background="@drawable/coxinanibeach"
            android:id="@+id/bt4"
            android:textColor="@color/white"
            android:layout_below="@+id/text3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Innani Beach"
            android:textSize="22dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:id="@+id/text4"
            android:layout_below="@+id/bt4"
            />
    </RelativeLayout>
</ScrollView>
