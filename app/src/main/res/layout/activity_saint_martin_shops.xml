<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.personal.radiantchittagong.SaintMartinShops">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <Button
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:text="Shops in Saint Martin"
        android:textSize="20dp"
        android:background="#107417"
        android:id="@+id/marshop"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:onClick="marshop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/text1"
        android:layout_below="@+id/marshop"
        />
    <Button
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:text="Restaurant"
        android:textSize="20dp"
        android:background="#107417"
        android:id="@+id/rest"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_below="@+id/text1"
        android:onClick="bb1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:id="@+id/text2"
        android:layout_below="@+id/rest"
        />




</RelativeLayout>

</ScrollView>
